{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<h1>Product</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary m-2" href="{{ path('app_product_index') }}">back to list</a>
{% if is_granted('PRODUCT_EDIT', product) %}
<a class="btn btn-info m-2" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
{% endif %}

{% if is_granted('ROLE_SUPER_ADMIN') %}
{{ include('product/_delete_form.html.twig') }}
{% endif %}


{% endblock %}

